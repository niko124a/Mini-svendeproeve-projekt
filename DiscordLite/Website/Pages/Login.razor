@page "/"
@page "/login"

<MudGrid>
    <MudItem xs="12" md="12" lg="12" Class="d-flex justify-center">
        <MudPaper Width="50rem" Class="pa-4">
            <MudForm @bind-IsValid="@success">
                <MudTextField T="string" Label="Username" Required="true" RequiredError="User name is required!" @ref="usernameField" />
                <MudTextField T="string" Label="Password" Required="true" RequiredError="Password is required!" @ref="passwordField"
                              InputType="InputType.Password" />
                <MudItem Class="d-flex align-center justify-space-between mt-4">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="ml-auto" OnClick="LoginUser">Login</MudButton>
                </MudItem>
            </MudForm>
            <MudDivider Class="mt-4 mb-4"/>
            <MudItem>
                <MudGrid>
                    <MudItem xs="12" md="8" lg="8" Class="d-flex justify-end">
                        <MudText Typo="Typo.h6">Don't have an account yet?</MudText>
                    </MudItem>
                    <MudItem xs="12" md="4" lg="4" Class="d-flex justify-end">
                        <MudButton Variant="Variant.Filled" OnClick="NavigateToRegisterPage">Register</MudButton>
                    </MudItem>
                </MudGrid>
            </MudItem>
        </MudPaper>
    </MudItem>
</MudGrid>
